<?xml version="1.0" encoding="utf-8"?>


 <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">
    <TableLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:weightSum="1">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.05"
            android:weightSum="1">

            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="New Button"
                android:id="@+id/ball1" />


            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="New Button"
                android:id="@+id/ball2" />

            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="New Button"
                android:id="@+id/ball3" />

            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="New Button"
                android:id="@+id/ball4"
                android:allowUndo="false" />

            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="New Button"
                android:id="@+id/ball5"
                android:allowUndo="false"
                android:layout_column="4"
                android:clickable="false" />

            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="New Button"
                android:allowUndo="false"
                android:layout_column="5"
                android:id="@+id/powerball" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <NumberPicker android:id="@+id/numberpicker1"
                android:layout_width="60dp"
                android:layout_height="60dp"  />
            <NumberPicker android:id="@+id/numberpicker2"
                android:layout_width="60dp"
                android:layout_height="60dp"  />
            <NumberPicker android:id="@+id/numberpicker3"
                android:layout_width="60dp"
                android:layout_height="60dp"  />
            <NumberPicker android:id="@+id/numberpicker4"
                android:layout_width="60dp"
                android:layout_height="60dp"  />
            <NumberPicker android:id="@+id/numberpicker5"
                android:layout_width="60dp"
                android:layout_height="60dp"  />
            <NumberPicker android:id="@+id/numberpicker6"
                android:layout_width="60dp"
                android:layout_height="60dp"  />

        </TableRow>

</TableLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:id="@+id/genButton"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Favorite"
        android:id="@+id/favButton"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt;--- go back"
        android:id="@+id/backbutton"
        android:layout_gravity="center_horizontal" />
</LinearLayout>